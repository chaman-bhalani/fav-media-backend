generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Entry {
  id        Int      @id @default(autoincrement())
  title     String
  type      EntryType
  director  String?
  budget    Decimal? @db.Decimal(18,2)
  location  String?
  duration  Int?
  yearTime  String?
  notes     String?
  posterUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EntryType {
  MOVIE
  TV_SHOW
}

